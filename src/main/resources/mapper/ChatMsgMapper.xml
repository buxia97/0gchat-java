            <if test ='null != url'>
                `url`,
            </if>
            <if test ='null != created'>
                `created`,
            </if>
            <if test ='null != chatid'>
                `chatid`,
            </if>
            <if test ='null != avatar'>
                `avatar`
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test ='null != Id'>
                #{Id},
            </if>
            <if test ='null != userName'>
                #{userName},
            </if>
            <if test ='null != ip'>
                #{ip},
            </if>
            <if test ='null != type'>
                #{type},
            </if>
            <if test ='null != text'>
                #{text},
            </if>
            <if test ='null != url'>
                #{url},
            </if>
            <if test ='null != created'>
                #{created},
            </if>
            <if test ='null != chatid'>
                #{chatid},
            </if>
            <if test ='null != avatar'>
                #{avatar}
            </if>
        </trim>
    </insert>

    <!-- 批量插入数据 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO chat_msg ( <include refid="Base_Column_List" /> ) VALUES
        <foreach collection="list" item="curr" index="index" separator=",">
            (
                #{curr.Id},
                #{curr.userName},
                #{curr.ip},
                #{curr.type},
                #{curr.text},
                #{curr.url}
            )
        </foreach>
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.zerogchat.entity.ChatMsg">
        UPDATE chat_msg
        <set>
            <if test ='null != userName'>`userName` = #{userName},</if>
            <if test ='null != ip'>`ip` = #{ip},</if>
            <if test ='null != type'>`type` = #{type},</if>
            <if test ='null != text'>`text` = #{text},</if>
            <if test ='null != url'>`url` = #{url},</if>
            <if test ='null != avatar'>`avatar` = #{avatar}</if>
        </set>
        WHERE `Id` = #{Id}
    </update>

    <!-- 删除 -->
    <delete id="delete">
        DELETE FROM chat_msg
        WHERE `Id` = #{key}
    </delete>

    <!-- 批量删除 -->
    <delete id="batchDelete" parameterType = "java.util.List">
        DELETE FROM chat_msg WHERE Id IN
        <foreach collection="list"  item="item" open="(" separator="," close=")"  >
            #{item}
        </foreach>
    </delete>

    <!-- 主键查询 -->
