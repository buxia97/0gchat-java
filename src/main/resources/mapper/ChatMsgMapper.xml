    <!-- 插入数据 -->
    <insert id="insert" parameterType="com.zerogchat.entity.ChatMsg">
        INSERT INTO chat_msg
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test ='null != Id'>
